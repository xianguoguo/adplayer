<resources>
    <declare-styleable name="ApplicationsStackLayout">
        <attr name="stackOrientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="marginLeft" format="dimension"  />
        <attr name="marginTop" format="dimension"  />
        <attr name="marginRight" format="dimension"  />
        <attr name="marginBottom" format="dimension"  />
    </declare-styleable>

    <declare-styleable name="MyVideoPlayer">

        <attr name="vp_source" format="string"/>

        <attr name="vp_leftAction" format="enum">
            <enum name="none" value="0"/>
            <enum name="restart" value="1"/>
            <enum name="retry" value="2"/>
        </attr>

        <attr name="vp_rightAction" format="enum">
            <enum name="none" value="3"/>
            <enum name="submit" value="4"/>
            <enum name="customLabel" value="5"/>
        </attr>

        <attr name="vp_customLabelText" format="string"/>
        <attr name="vp_retryText" format="string"/>
        <attr name="vp_submitText" format="string"/>
        <attr name="vp_bottomText" format="string"/>

        <attr name="vp_restartDrawable" format="reference"/>
        <attr name="vp_playDrawable" format="reference"/>
        <attr name="vp_pauseDrawable" format="reference"/>

        <attr name="vp_hideControlsOnPlay" format="boolean"/>
        <attr name="vp_autoPlay" format="boolean"/>

        <attr name="vp_disableControls" format="boolean"/>

        <attr name="vp_themeColor" format="color"/>

        <attr name="vp_autoFullscreen" format="boolean"/>

        <attr name="vp_loop" format="boolean"/>

    </declare-styleable>


    <declare-styleable name="ImageViewWrapper">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="img_src" format="string" />
    </declare-styleable>


    <declare-styleable name="ImageSliderViewWrapper">
        <attr name="img_list" format="string"/>
    </declare-styleable>

    <declare-styleable name="ExoVideoViewWrapper">
        <attr name="video_src" format="string"/>
    </declare-styleable>

    <declare-styleable name="ScrollTextViewWrapper">
        <attr name="scrollTextColor" format="color"/>
        <attr name="scrollSpeed">
            <enum name="slow" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="fast" value="3"/>
        </attr>
    </declare-styleable>

</resources>
