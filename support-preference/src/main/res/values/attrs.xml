<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Theme">
        <!-- Default style for Preference. -->
        <attr name="preferenceStyle"/>
        <!-- Default style for CheckBoxPreference. -->
        <attr name="checkBoxPreferenceStyle"/>
        <!-- Default style for DialogPreference. -->
        <attr name="dialogPreferenceStyle"/>
        <!-- Default style for EditTextPreference. -->
        <attr name="editTextPreferenceStyle"/>
        <!-- Default style for RingtonePreference. -->
        <attr name="ringtonePreferenceStyle"/>
        <!-- Default style for switch preferences. -->
        <attr name="switchPreferenceStyle"/>

        <attr name="seekBarPreferenceStyle"/>

        <attr name="seekBarDialogPreferenceStyle" format="reference"/>
        <attr name="listPreferenceStyle" format="reference"/>
        <attr name="multiSelectListPreferenceStyle" format="reference"/>

        <!-- Default style for PreferenceScreen. -->
        <attr name="preferenceScreenStyle"/>

        <!-- Preference fragment list style -->
        <attr name="preferenceFragmentListStyle"/>

        <attr name="asp_textAppearanceListItemSecondary" format="reference"/>
        <attr name="asp_textAppearanceListItemTertiary" format="reference"/>

        <attr name="asp_preferenceIconTint" format="color"/>
        <attr name="asp_preferenceDialogIconTint" format="color"/>
    </declare-styleable>

    <!-- Base attributes available to Preference. -->
    <declare-styleable name="Preference">
        <!-- The optional icon for the preference -->
        <attr name="android:icon"/>

        <attr name="asp_tint" format="color"/>
        <attr name="asp_tintMode" format="enum">
            <enum name="src_over" value="3"/>
            <enum name="src_in" value="5"/>
            <enum name="src_atop" value="9"/>
            <enum name="multiply" value="14"/>
            <enum name="screen" value="15"/>
        </attr>
        <attr name="asp_tintEnabled" format="boolean"/>
        <attr name="asp_iconPaddingEnabled" format="boolean"/>

        <attr name="titleTextAppearance"/>
        <attr name="titleTextColor"/>
        <attr name="subtitleTextAppearance"/>
        <attr name="subtitleTextColor"/>
    </declare-styleable>

    <declare-styleable name="ListPreference">
        <attr name="asp_menuMode" format="enum">
            <enum name="dialog" value="0"/>
            <enum name="simple_dialog" value="1"/>
            <enum name="simple_menu" value="2"/>
            <enum name="simple_adaptive" value="3"/>
        </attr>
        <attr name="asp_simpleMenuWidthUnit"/>
        <attr name="android:adjustViewBounds"/>
        <attr name="popupTheme"/>
    </declare-styleable>

    <declare-styleable name="DialogPreference">
        <attr name="android:dialogIcon"/>

        <attr name="asp_dialogTint" format="color"/>
        <attr name="asp_dialogTintMode" format="enum">
            <enum name="src_over" value="3"/>
            <enum name="src_in" value="5"/>
            <enum name="src_atop" value="9"/>
            <enum name="multiply" value="14"/>
            <enum name="screen" value="15"/>
        </attr>
        <attr name="asp_dialogTintEnabled" format="boolean"/>
        <attr name="asp_dialogIconPaddingEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RingtonePreference">
        <attr name="android:ringtoneType"/>
        <attr name="android:showDefault"/>
        <attr name="android:showSilent"/>
    </declare-styleable>

    <declare-styleable name="SeekBarPreference">
        <attr name="asp_min" format="integer"/>
        <attr name="android:max"/>
        <attr name="asp_info" format="string"/>
        <!--<attr name="asp_seekBarIncrement" format="integer"/>-->
        <!--<attr name="asp_adjustable" format="boolean"/>-->
        <!--<attr name="asp_showSeekBarValue" format="boolean"/>-->
        <attr name="asp_infoAnchor" format="reference"/>
    </declare-styleable>

    <!--<declare-styleable name="SeekBarDialogPreference">-->
        <!--<attr name="asp_min"/>-->
        <!--<attr name="android:max"/>-->
    <!--</declare-styleable>-->

    <declare-styleable name="EditTextPreference">
        <attr name="asp_editTextLayout" format="reference"/>
    </declare-styleable>

</resources>
